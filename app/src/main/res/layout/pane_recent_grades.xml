<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >

    <data>

        <variable
                name="viewModel"
                type="com.ydly.rankingalarm2.ui.ranking.RankingViewModel"
                />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="13dp"
            android:paddingBottom="19dp"
            android:background="@drawable/box_outline"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recentGrades"
                android:textColor="@color/milk_chocolate"
                android:textSize="@dimen/paneTitleFontSize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/paneRecent_title"
                />


        <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/paneRecent_title"
                android:layout_marginTop="15dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:stretchColumns="0,1,2,3,4"
                android:background="@drawable/box_outline"
                >

            <TableRow>
                <TextView
                        android:id="@+id/paneRecent_date0"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:text="3/1"
                        android:textSize="@dimen/paneContentFontSize"
                        android:gravity="center_horizontal"
                        android:background="@drawable/table_element_outline"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                <TextView
                        android:id="@+id/paneRecent_date1"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:text="3/2"
                        android:textSize="@dimen/paneContentFontSize"
                        android:gravity="center_horizontal"
                        android:background="@drawable/table_element_outline"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                <TextView
                        android:id="@+id/paneRecent_date2"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:text="3/3"
                        android:textSize="@dimen/paneContentFontSize"
                        android:gravity="center_horizontal"
                        android:background="@drawable/table_element_outline"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                <TextView
                        android:id="@+id/paneRecent_date3"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:text="3/4"
                        android:textSize="@dimen/paneContentFontSize"
                        android:gravity="center_horizontal"
                        android:background="@drawable/table_element_outline"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                <TextView
                        android:id="@+id/paneRecent_date4"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:text="3/5"
                        android:textSize="@dimen/paneContentFontSize"
                        android:gravity="center_horizontal"
                        android:background="@drawable/table_element_outline"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
            </TableRow>

            <TableRow>
                <ImageView
                        android:id="@+id/paneRecent_grade0"
                        android:src="@drawable/a_2"
                        android:background="@drawable/table_element_outline"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                <ImageView
                        android:id="@+id/paneRecent_grade1"
                        android:src="@drawable/b_2"
                        android:background="@drawable/table_element_outline"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                <ImageView
                        android:id="@+id/paneRecent_grade2"
                        android:src="@drawable/a_3"
                        android:background="@drawable/table_element_outline"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                <ImageView
                        android:id="@+id/paneRecent_grade3"
                        android:src="@drawable/a_2"
                        android:background="@drawable/table_element_outline"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                <ImageView
                        android:id="@+id/paneRecent_grade4"
                        android:src="@drawable/c_2"
                        android:background="@drawable/table_element_outline"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
            </TableRow>

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>